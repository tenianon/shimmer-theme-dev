    "build": "node src/index.ts",
    "build:public": "node scripts/generatePublicBuild.ts",
    "format": "prettier --write src/ scripts/",
    "lint": "eslint ./src ./scripts",
    "lint:debug": "eslint ./src ./scripts --debug",
    "lint:fix": "eslint ./src ./scripts --fix",
    "generate": "npm run download:docs && npm run generate:types",
    "download:docs": "node scripts/downloadThemeColorMarkdown.ts",
    "generate:types": "node scripts/generateTypescriptTypeFile.ts",
    "package": "vsce package --no-dependencies"
  },
